{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "strict": true,
    "baseUrl": "./src/",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "typeRoots": ["./src/@types", "./node_modules/@types"]
  },
  "include": [
    "src",
    "server"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
